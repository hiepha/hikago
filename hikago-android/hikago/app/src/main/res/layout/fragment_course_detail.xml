<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:showIn="@layout/activity_course_detail"
                tools:context="com.ideatown.hikago.CourseDetailActivityFragment">

    <ImageView
        android:id="@+id/course_detail_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/course_thumbnail"/>

    <TextView
        android:id="@+id/detail_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_detail_image_view"
        android:text="Basic Japanese - Level 1"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/detail_text_view"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_title_text_view"
        android:text="@string/detail_dump"/>

</RelativeLayout>
